{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "src/test/**/*",
    "node_modules/.pnpm/@types+jest@29.5.14/node_modules/@types/jest/index.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
